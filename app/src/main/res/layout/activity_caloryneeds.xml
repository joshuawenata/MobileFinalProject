<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caloryneeds">


    <TextView
        android:id="@+id/caloryneeds_maintext"
        android:layout_width="303dp"
        android:layout_height="43dp"
        android:layout_above="@+id/caloryneeds_main_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/curved_textview"
        android:backgroundTint="#48B5A8"
        android:gravity="center"
        android:text="Daily Calories Need"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <RelativeLayout
        android:id="@+id/caloryneeds_main_layout"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="149dp"
        android:background="@drawable/curved_relativelayout"
        android:backgroundTint="#C9F3F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/caloryneeds_height_layout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_above="@+id/caloryneeds_weight_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="62dp"
            android:background="@drawable/extra_curved30"
            android:backgroundTint="#5BD6C8">

            <TextView
                android:id="@+id/caloryneeds_height_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="39dp"
                android:gravity="center"
                android:text="90" />

            <SeekBar
                android:id="@+id/caloryneeds_height_seekbar"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="18dp"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="422dp" />

            <TextView
                android:id="@+id/caloryneeds_height_text"
                android:layout_width="49dp"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="75dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="76dp"
                android:layout_marginBottom="65dp"
                android:gravity="center"
                android:text="Height"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/caloryneeds_age_layout"
            android:layout_width="88dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="162dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/extra_curved30"
            android:backgroundTint="#A2F1E8">

            <TextView
                android:id="@+id/caloryneeds_age_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:text="1" />

            <SeekBar
                android:id="@+id/caloryneeds_age_seekbar"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="13dp"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="422dp" />

            <TextView
                android:id="@+id/caloryneeds_age_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="66dp"
                android:gravity="center"
                android:text="Age"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/caloryneeds_weight_layout"
            android:layout_width="88dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/extra_curved30"
            android:backgroundTint="#A2F1E8">

            <TextView
                android:id="@+id/caloryneeds_weight_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:text="1" />

            <SeekBar
                android:id="@+id/caloryneeds_weight_seekbar"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="13dp"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="422dp" />

            <TextView
                android:id="@+id/caloryneeds_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="66dp"
                android:gravity="center"
                android:text="Weight"
                android:textStyle="bold" />
        </RelativeLayout>


        <Spinner
            android:id="@+id/caloryneeds_spinner"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/caloryneeds_height_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/extra_curved30"
            android:backgroundTint="#16BFBF"
            android:entries="@array/calorie_pasdropdown"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/caloryneeds_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/caloryneeds_spinner"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="19dp"
            android:gravity="center"
            android:text="Select Physical Activity"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/caloryneeds_secondarylayout"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/curved_relativelayout"
        android:backgroundTint="#16BFBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caloryneeds_main_layout"
        app:layout_constraintVertical_bias="0.906">

        <TextView
            android:id="@+id/caloryneeds__title"
            android:layout_width="192dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/curved_textview"
            android:gravity="center"
            android:text="Calories Needed"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/caloryneeds_view"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="0"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>