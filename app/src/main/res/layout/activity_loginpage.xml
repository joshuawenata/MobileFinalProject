<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tosca"
    android:gravity="center"
    tools:context=".loginpage">

    <TextView
        android:id="@+id/loginpage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Sign In Page"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/loginpage_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpage_title"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/rounded_input_sign_in"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/loginpage_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpage_email"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_input_sign_in"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <ImageButton
        android:id="@+id/loginpage_loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpage_password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/sign_in_btn"
        android:background="@null"
        android:onClick="signInEmail"
        android:scaleY="0.8"
        android:scaleX="0.8"/>



    <TextView
        android:id="@+id/loginpage_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpage_loginbtn"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Forget Password?" />




</RelativeLayout>